pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Performing the Build option'
                build quietPeriod: 5, job: 'Amazon_Dev'
            }
        }
    
     stage('Deploy') {
          steps {
                echo 'Performing the Deploy option'
            }
        }

 stage('Test') {
        steps {
                echo 'Performing the Test option'
            }
        }
 stage('Release') {
          steps {
                echo 'Performing the Release option'
            }
        }
    }
}
